% Print a Sign with Eventname, Room, Floor and Area
\newcommand\printVSL[1][Area]{
    
    \makebox[\textwidth][c]{
        \includegraphics[height=4cm,keepaspectratio]{VSL_logo_big.png}
        \hspace{0.5cm}
        \raggedleft{\fontsize{3cm}{3.4cm}\selectfont\color{vslblue}\textbf{\raisebox{0.5ex}{\Event}}}
    }

    \vspace{1.5cm}

    \noindent\makebox[\linewidth]{\rule{\paperwidth}{0.4pt}}

    \vspace{1.5cm}

    \noindent\makebox[\textwidth][c]{
        {\fontsize{3cm}{3cm}\selectfont\Room}
    }

    \vspace{1cm}

    \noindent\makebox[\linewidth]{\rule{\paperwidth}{0.4pt}}

    \vspace{1cm}

    \noindent\parbox{.5\linewidth}{
        \begin{center}
            {\fontsize{2cm}{1em}\selectfont {#1}}

            \vspace{1.5cm}

            {\fontsize{3cm}{2em}\selectfont {\Area}}
        \end{center}
    }
    \noindent\parbox{.5\linewidth}{
        \begin{center}
            {\fontsize{2cm}{1em}\selectfont {Floor}}

            \vspace{1.5cm}

            {\fontsize{3cm}{2em}\selectfont {\Floor}}
        \end{center}
    }

}
